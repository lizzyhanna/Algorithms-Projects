    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-g", "-std=c++14","./src/*.cpp", "-o", "./src/a"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}